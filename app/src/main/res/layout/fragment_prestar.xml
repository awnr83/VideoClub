<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".prestar.PrestarFragment">

    <data>
        <variable
            name="viewModel"
            type="com.moappdev.blowbuster.prestar.PrestarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/color_fondo_claro"
            android:layout_margin="@dimen/minimo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/btnAgregar"/>
<!--Socio-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSocio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/fr_socio"
            android:layout_margin="@dimen/normal"
            app:helperText="@string/fr_requerido"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSocio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_add_socio"
                android:text="@={viewModel.nroSocio}"
                android:gravity="center"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.vTextSocio}"
            android:text="No existe el Socio"
            app:layout_constraintStart_toStartOf="@id/clDatosSocio"
            app:layout_constraintEnd_toEndOf="@id/clDatosSocio"
            app:layout_constraintTop_toTopOf="@id/clDatosSocio"
            app:layout_constraintBottom_toBottomOf="@id/clDatosSocio"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDatosSocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/normal"
            android:visibility="@{viewModel.VSocio}"
            app:layout_constraintStart_toStartOf="@id/tilSocio"
            app:layout_constraintEnd_toEndOf="@id/tilSocio"
            app:layout_constraintTop_toBottomOf="@id/tilSocio">

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="@dimen/cv_foto"
                android:layout_height="@dimen/cv_foto"
                imageCircle="@{viewModel.socio.fotoPerfil}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars"/>
            <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvApellido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/minimo"
            android:textAppearance="?attr/textAppearanceBody1"
            textApellido="@{viewModel.socio.apellido}"
            app:layout_constraintStart_toEndOf="@id/imgPerfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Apellido: Rojas"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/minimo"
                android:textAppearance="?attr/textAppearanceBody1"
                textNombre="@{viewModel.socio.nombre}"
                app:layout_constraintStart_toEndOf="@id/imgPerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvApellido"
                tools:text="nombre: Alfredo"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/minimo"
                android:textAppearance="?attr/textAppearanceBody1"
                textTelefono="@{viewModel.socio.telefono}"
                app:layout_constraintStart_toEndOf="@id/imgPerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNombre"
                tools:text="Teledfono: 4995137"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
<!--Ejemplar-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEjemplar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/fr_ejemplar"
            android:layout_marginTop="@dimen/normal"
            android:layout_margin="@dimen/normal"
            app:helperText="@string/fr_requerido"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clDatosSocio"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEjemplar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_ejemplar"
                android:text="@={viewModel.nroEjemplar}"
                android:gravity="center"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.vTextEjemplar}"
            android:text="@{viewModel.noEjemplar}"
            app:layout_constraintStart_toStartOf="@id/clDatosEjemplar"
            app:layout_constraintEnd_toEndOf="@id/clDatosEjemplar"
            app:layout_constraintTop_toTopOf="@id/clDatosEjemplar"
            app:layout_constraintBottom_toBottomOf="@id/clDatosEjemplar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDatosEjemplar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/normal"
            android:visibility="@{viewModel.VEjemplar}"
            app:layout_constraintStart_toStartOf="@id/tilEjemplar"
            app:layout_constraintEnd_toEndOf="@id/tilEjemplar"
            app:layout_constraintTop_toBottomOf="@id/tilEjemplar">

            <ImageView
                android:id="@+id/imgPortada"
                android:layout_width="@dimen/cv_foto"
                android:layout_height="@dimen/cv_foto"
                image="@{viewModel.ejemplar.img}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/minimo"
                android:textAppearance="?attr/textAppearanceBody1"
                android:text="@{viewModel.ejemplar.nombre}"
                app:layout_constraintStart_toEndOf="@id/imgPortada"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Terminator 1"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPublicacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/minimo"
                android:textAppearance="?attr/textAppearanceBody2"
                textPublicacion="@{viewModel.ejemplar.publicacion}"
                app:layout_constraintStart_toEndOf="@id/imgPortada"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitulo"
                tools:text="AÃ±o de publicacion: 1983"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/minimo"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textAlignment="textEnd"
                android:text="@{viewModel.ejemplar.tipo}"
                app:layout_constraintStart_toEndOf="@id/imgPortada"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPublicacion"
                tools:text="BLueRay"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnAgregar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal"
            android:layout_marginEnd="@dimen/normal"
            android:text="@string/fr_prestar"
            android:onClick="@{()->viewModel.prestar()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clDatosEjemplar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>