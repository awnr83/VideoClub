<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo">

        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/blockbuster_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSocios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fh_socio"
            android:layout_marginTop="@dimen/normal"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:icon="@drawable/ic_socios"
            app:iconGravity="start"
            app:layout_constraintBottom_toTopOf="@id/btnEjemplares"
            app:layout_constraintEnd_toEndOf="@id/btnEjemplares"
            app:layout_constraintStart_toStartOf="@id/btnEjemplares"
            app:layout_constraintTop_toBottomOf="@id/imgHeader"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEjemplares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal"
            android:text="@string/fh_ejemplar"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:icon="@drawable/ic_ejemplar"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSocios" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>